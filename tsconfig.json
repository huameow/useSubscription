{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",

    /* Basic Options */
    "target": "es2017",
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "esModuleInterop": true,
    "importHelpers": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "strictBindCallApply": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,

    /* 实验支持  */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Cli Options */
    "pretty": true,

    "jsx": "react",
    "allowJs": true,

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "**/*.spec.ts"],
  "exclude": ["node_modules"]
}
